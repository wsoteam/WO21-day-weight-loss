<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardElevation="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/darkWithoutAlfa">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ivItemActivityExGroups"/>

        <TextView
            android:id="@+id/tvNameItemActivityExGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="ItemOfHomeList"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCountOfExItemActivityExGroups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="ItemOfHomeList"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_count_of_ex"
            android:textStyle="bold" />


    </FrameLayout>

</android.support.v7.widget.CardView>